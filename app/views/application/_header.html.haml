#site-header
  %nav.navbar.navbar-inverse.navbar-fixed-top
    .container
      .navbar-header
        %button.navbar-toggle.collapsed{"data-target": "#collapsable", "data-toggle": "collapse", type: "button"}
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.navbar-brand{ href: root_path }
          HOTLINEKR

      .collapse.navbar-collapse
        %ul.nav.navbar-nav
          %li= link_to '제안하기', new_proposal_path
          %li= link_to '프로젝트', projects_path
          - if current_user.try(:role).try(:staff?)
            %li.dropdown
              %a(href="#" class="dropdown-toggle" data-toggle="dropdown")
                관리
                %span(class="caret")
              %ul.dropdown-menu
                %li= link_to '제안', admin_proposals_path
                %li= link_to '프로젝트', admin_projects_path
                %li= link_to '위원회', admin_committees_path
                %li= link_to '운영자 관리', admin_staffs_path


        %ul.nav.navbar-nav.navbar-right
          - if user_signed_in?
            %li
              = link_to user_path(current_user) do
                = render 'users/thumbnail'
                = current_user.nickname
            %li
              = link_to sign_out_path, method: :delete do
                로그아웃
          - else
            %li
              = link_to '가입/로그인', join_path
