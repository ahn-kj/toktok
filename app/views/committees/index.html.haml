%section
  .container
    .page-header
      %h2 위원회

    %section
      = render 'form'

    - @committees.each do |committee|
      %section
        .panel.panel-default[committee]
          .panel-heading
            .pull-right
              = link_to '수정', [:edit, committee]
              = link_to '삭제', committee, method: :delete, data: { confirm: '정말로 삭제하시겠습니까?' }
            %h4.panel-title= committee.name

          .panel-body
            %p= committee.description
          %ul.list-group
            - committee.congressmen.each do |c|
              %li.list-group-item
                = c.name
                .pull-right
                  = link_to '삭제', c, method: :delete, data: { confirm: '정말로 삭제하시겠습니까?' }
            %li.list-group-item
              = render 'congressmen/form', committee: committee
